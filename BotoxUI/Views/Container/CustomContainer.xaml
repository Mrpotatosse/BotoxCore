<UserControl x:Class="BotoxUI.Views.Container.CustomContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BotoxUI.Views.Container" xmlns:button="clr-namespace:BotoxUI.Views.Button"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" SizeChanged="UserControl_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <button:CustomButton Grid.Row="0" x:Name="TopBtn" IsSelected="False" BackgroundEnterColor="#2E2E32" SelectionColor="Black" ButtonText="          " BackgroundColor="Transparent" Height="25" OnClick="TopBtn_OnClick" IsEnabled="False"></button:CustomButton>
        <button:CustomButton Grid.Row="2" x:Name="BotBtn" IsSelected="False" BackgroundEnterColor="#2E2E32" SelectionColor="Black" ButtonText="          " BackgroundColor="Transparent" Height="25" OnClick="BotBtn_OnClick" IsEnabled="False"></button:CustomButton>
        <DockPanel Grid.Row="1" x:Name="MainContainer">
            
        </DockPanel>
    </Grid>
</UserControl>
