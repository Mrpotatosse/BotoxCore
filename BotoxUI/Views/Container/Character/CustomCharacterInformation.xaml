<UserControl x:Class="BotoxUI.Views.Container.Character.CustomCharacterInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BotoxUI.Views.Container.Character"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Margin="5">
        <GroupBox.Header>
            <TextBlock>Character</TextBlock>
        </GroupBox.Header>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" x:Name="CharacterImageBox"></Image>
            <DockPanel Grid.Column="1">
                <TextBlock VerticalAlignment="Center" TextAlignment="Center" Name="NameLvTxt" TextWrapping="Wrap">#NAME Lv.#LEVEL</TextBlock>
            </DockPanel>
        </Grid>
    </GroupBox>
</UserControl>
